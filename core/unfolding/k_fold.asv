function T = k_fold(varargin)
% k_fold() fold a k_fold matrix into its original tensor.
%
%     T = k_fold(M,k,size)  is the inverse operation of M = k_unfold(T,k)
%
% Examples
%     T = tensor(rand(2,4,6,8));
%     M = k_unfold(T,2);
%     T1 = k_fold(M,2,T.size)


    if nargin ~= 3
        error("Incorrect input arguments number!")
    end
    if isa(varargin{1},'tensor')
        M = varargin{1}.data;
    elseif isnumeric(varargin{1})
        M = varargin{1};
    else
        error("Input tensor must be tensor class data or matrix!")
    end
    if isnumeric(varargin{2}) && isnumeric(varargin{3})
        mode = varargin{2};
        sz = varargin{3};
    else
        error("Mode or size must be numeric!")
    end

end